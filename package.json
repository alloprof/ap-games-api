{
  "name": "ap-games-api",
  "version": "0.0.1",
  "description": "Alloprof API for Games",
  "main": "index.js",
  "engines": {
    "node": ">=22.11.0",
    "npm": ">=10.9.0"
  },
  "scripts": {
    "dev": "tsc -w & node --watch dist/index.js | bunyan",
    "test": "jest --watchAll",
    "test:once": "jest",
    "clean": "rm -rf dist",
    "build": "npm run clean && tsc",
    "build:production": "npm run clean && tsc && cp package.json package-lock.json dist/ && cd dist && npm install --only=production && cd ..",
    "coverage": "jest --coverage",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "prepare": "husky"
  },
  "author": "Alloprof",
  "license": "MIT",
  "dependencies": {
    "@google-cloud/logging-bunyan": "^5.1.0",
    "axios": "^1.13.2",
    "bunyan": "^1.8.15",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.2",
    "firebase-admin": "^13.5.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "@types/bunyan": "^1.8.11",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/supertest": "^6.0.2",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2",
    "superagent": "^9.0.2",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.5",
    "typescript": "^5.4.5"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
